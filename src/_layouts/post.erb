---
layout: default
---

<section class="add-sticky-padding-top">
  <section class="bg-texture-light-to-green pt-20 pb-8 px-10">
    <h1 class="text-center capitalize"><%= page.data.title %></h1>
  </section>

  <figure class="max-w-3xl mx-auto pt-20 px-10">
    <img src="<%= page.data.feature %>" class="rounded-lg"/>
  </figure>

  <section class="pt-20 text-center font-serif text-xl tracking-wider">
    <span><%= cooldate(page.data.date) %></span>
  </section>

  <section class="max-w-3xl mx-auto px-10 py-20 pb-8 has-drop-cap">
    <%= yield %>
  </section>
</section><!-- .add-sticky-padding-top -->
